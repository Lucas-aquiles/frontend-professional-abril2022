// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  providers String[]
  idProviders String[]
  email String @unique
  name String
  picture String
  role Role @default(NORMAL)
}

enum Role{
  NORMAL
  ADMIN
}